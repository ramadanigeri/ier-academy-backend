# ===========================================
# IER ACADEMY BACKEND - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and update the values

# ===========================================
# REQUIRED - Database Configuration
# ===========================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/ier_academy

# ===========================================
# REQUIRED - Server Configuration
# ===========================================
PORT=3001
NODE_ENV=development

# ===========================================
# REQUIRED - JWT Authentication
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-and-make-it-very-long-and-random
JWT_EXPIRES_IN=24h

# ===========================================
# REQUIRED - CORS Configuration
# ===========================================
FRONTEND_URL=http://localhost:3000

# ===========================================
# REQUIRED - Admin User Setup (for create-admin.js script)
# ===========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# ===========================================
# REQUIRED - Backend URL (for file uploads)
# ===========================================
BACKEND_URL=http://localhost:3001

# ===========================================
# OPTIONAL - Email Service (if using email features)
# ===========================================
RESEND_API_KEY=your-resend-api-key